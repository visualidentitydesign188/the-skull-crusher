{
  "version": 2,
  "routes": [
    {
      "src": "/controls",
      "dest": "/"
    },
    {
      "src": "/story",
      "dest": "/"
    },
    {
      "handle": "filesystem"
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    }
  ],
  "rewrites": [
    { "source": "/(.*)", "destination": "/" }
  ]
} 